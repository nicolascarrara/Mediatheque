  <script>
window.onload=apiquota();

    async function apiquota(){
      quotapi=document.querySelector('#quotaapi');
      const source = await fetch('movies/quota');
      const data = await source.json()      
      html= ' Requêtes disponible <span class="badge badge-primary badge-pill">' + (data.maximum - data.used) + '</span>'
      quotapi.innerHTML =html;
     }
    
      async function searchMovie(){
        const query = document.querySelector("#ean").value;
        movielist = document.querySelector('#resultsList');
        if (query.length > 3) { 
          const source = await fetch(`movies/searchmovie?value=${query}`);
          const data = await source.json();
          const movies =data.dvd
          let html
          console.log(data.dvd);
          console.log("ok")
          if (undefined!=movies){
          if (movies.length>0&&Array.isArray(movies)){
             html = movies.map( movie => '<li class="list-group-item d-flex justify-content-between align-items-center"><img src="' + movie.cover + '" alt="" style="height: 20vh;">' + movie.titres.fr + '<span class="badge badge-primary badge-pill"> ' + movie.media + '</span></li>').join('');
            }else{
              html = '<li class="list-group-item d-flex justify-content-between align-items-center"><img src="' + movies.cover + '" alt="" style="height: 20vh;">' + movies.titres.fr + '<span class="badge badge-primary badge-pill"> ' + movies.media + '</span></li>'
            }
          }else{
            html = '<li class="list-group-item d-flex justify-content-between align-items-center">Aucun résultat</li>'
          }
          movielist.innerHTML = html; 
        }
      }
    
       function addMovie () {
         let form=document.getElementById('formaddmovie');
         var ean = {
           ean: document.getElementById('ean').value
         }
         document.getElementById('formaddmovie').style.display="none";
         document.getElementById('spinner').style.display= 'block';
         var xhr = new window.XMLHttpRequest()
         xhr.open('POST', '/movies/addmovie', true)
         xhr.setRequestHeader('Content-Type', 'application/json;charset=UTF-8')
         xhr.send(JSON.stringify(ean))
         xhr.onreadystatechange = function(){
      		if(xhr.readyState == 4 && xhr.status == 200){
            var jsonResponse = JSON.parse(xhr.responseText);
            populateBook(jsonResponse);
            flash=document.getElementById('response');
            flash.innerHTML='<div class="alert alert-dismissible alert-success"><button type="button" class="close" data-dismiss="alert">&times;</button><strong>Parfait ! </strong> "<b>'+jsonResponse.book.title+'</b>" a correctement été ajouté !</div>';
      		}else if(xhr.readyState == 4 && xhr.status != 200){
              flash=document.getElementById('response');
              flash.innerHTML='<div class="alert alert-dismissible alert-danger"><button type="button" class="close" data-dismiss="alert">&times;</button><strong>Oh mince!</strong> il semblerait qu\'il n\'y ait aucun résultat pour cet ISBN.</div>'
          }
          document.getElementById('formaddmovie').style.display="flex";
          document.getElementById('spinner').style.display= 'none';
      	}
       }
     </script>
  
